
@using Batu.Entites.Concrete;
@model List<PortfolioEntity>
<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Portfolio </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            @foreach (var item in Model)
            {

       
            <div class="grid-item">
                <a href="@item.Name">
                    <figure class="portfolio-item">
                        <img src="~/Template/images/portfolio/1-small.png" data-bp="~/Template/images/portfolio/1.jpg" />
                        <figcaption>
                            <h4 class="h5 mb-0">Web Design</h4>
                            <div>@item.Name</div>
                        </figcaption>
                    </figure>
                </a>
            </div>
        
           }  </div>
    </div>
</div>